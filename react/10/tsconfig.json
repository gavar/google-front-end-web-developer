{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true, // TODO: false in production
    "allowUnusedLabels": true, // TODO: false in production
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": false,
    "jsx": "react",
    "keyofStringsOnly": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": false, // TODO: true in production
    "noImplicitThis": false, // TODO: true in production
    "noResolve": false,
    "noUnusedLocals": false, // TODO: true in production
    "outDir": "out",
    "preserveConstEnums": true,
    "pretty": true,
    "rootDir": ".",
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "esnext",
    "paths": {
      "$*": ["packages/*"],
      "~*": [
        "node_modules/@types/*",
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "**/sw", // all service worker files
    "**/#*", // all files where names starts with #
    "**/out", // all 'out' directories
    "**/tmp", // all 'tmp' directories
    "**/dist" // all 'dist' directories
  ]
}
