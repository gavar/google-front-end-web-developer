{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "curly": false,
    "member-access": false,
    "interface-name": ["never-prefix"],
    "jsx-boolean-value": false,
    "object-literal-sort-keys": false
  }
}
